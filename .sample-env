# pylint: skip-file
# .env file

# port application is served on
PORT=8000

# set to 'production' or 'development'
# https://nodejs.dev/learn/nodejs-the-difference-between-development-and-production
NODE_ENV="development"

# path to python executable; default ''
# Note: if a relative path is specified, it must be relative to the project root folder.
# e.g. if using a venv virtual environment (https://docs.python.org/3/library/venv.html#module-venv)
#      in the project root folder, use './venvd/Scripts/'
PYTHON_PATH='./venvd/Scripts/'

# python executable; default 'python3'
# Note: if running on windows, full filename including extension is required.
PYTHON_EXE='python.exe'

# path to app folder; default '/app'
# Note: if a relative path is specified, it must be relative to the project root folder.
# e.g. the default location is the project root folder, so use './'
APP_PATH='./'

# Google Drive API credentials
GOOGLE_CREDS=""

# name of Google Drive API credentials file; default 'google_creds.json'
GOOGLE_CREDS_FILE="google_creds.json"

# path to Google Drive API credentials file; default './'
# Note: if a relative path is specified, it must be relative to the project root folder.
# e.g. the default location is the project root folder, so use './'
GOOGLE_CREDS_PATH="./"

# RapidAPI YahooFinance Stocks credentials
YAHOO_FINANCE_CREDS=""

# name of RapidAPI YahooFinance Stocks credentials file; default 'yahoo_finance_creds.json'
YAHOO_FINANCE_CREDS_FILE="yahoo_finance_creds.json"

# path to RapidAPI YahooFinance Stocks credentials file; default './'
# Note: if a relative path is specified, it must be relative to the project root folder.
# e.g. the default location is the project root folder, so use './'
YAHOO_FINANCE_CREDS_PATH="./"

# name of Google Sheets spreadsheet
SPREADSHEET_NAME="AnalaStock"

# path to data files folder; default './data'
# Note: if a relative path is specified, it must be relative to the project root folder.
DATA_PATH="./data"

# Google Sheets API: Read requests per minute per user; default 60
GOOGLE_READ_QUOTA=60

# Google Sheets API: Write requests per minute per user; default 60
GOOGLE_WRITE_QUOTA=60

# RapidAPI: Requests per minute; default 50
RAPIDAPI_READ_QUOTA=50

# Max backoff time in seconds for truncated exponential backoff retry; default 128
MAX_BACKOFF=128

# Enable console log messages; set to 0 or 1
LOGGING=1

# path to help file; default './doc/help.txt'
# Note: if a relative path is specified, it must be relative to the project root folder.
HELP_PATH="./doc/help.txt"
